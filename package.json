{
  "name": "@sbb-esta/lyne-documentation",
  "version": "0.1.169",
  "private": true,
  "author": "Lyne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lyne-design-system/lyne-documentation"
  },
  "bugs": {
    "url": "https://github.com/lyne-design-system/lyne-documentation/issues"
  },
  "scripts": {
    "build": "gridsome build",
    "develop": "gridsome develop",
    "explore": "gridsome explore",
    "format": "prettier \"**/*\" --write --ignore-unknown",
    "integrity": "yarn -s format",
    "lint": "npm run lint:js && npm run lint:vue && npm run lint:yml",
    "lint:js": "eslint \"**/*.js\"",
    "lint:vue": "eslint \"**/*.vue\"",
    "lint:yml": "eslint \"**/*.{yml,yaml}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@gridsome/source-graphql": "0.1.0",
    "@sbb-esta/icons": "0.1.39",
    "@sbb-esta/lyne-components": "0.36.13",
    "@sbb-esta/lyne-design-tokens": "0.3.4",
    "@sbb-esta/pictograms": "0.0.6",
    "axios": "1.4.0",
    "buefy": "0.9.23",
    "flexsearch": "0.7.31",
    "gridsome": "0.7.23",
    "gridsome-plugin-i18n": "1.6.0",
    "gridsome-plugin-remark-shiki": "0.6.0",
    "lyne-helper-eslint-config": "1.0.7",
    "prettier": "2.8.8",
    "prismjs": "1.29.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@gridsome/cli": "0.3.4",
    "@gridsome/source-filesystem": "0.6.2",
    "@gridsome/transformer-remark": "0.6.4",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-vue": "9.14.1",
    "eslint-plugin-yaml": "0.5.0",
    "gridsome-plugin-remark-mermaid": "1.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "netlify-cli": "15.6.0",
    "node-sass": "8.0.0",
    "sass-loader": "10.4.1",
    "standard-version": "9.5.0",
    "style-resources-loader": "1.5.0",
    "vue-eslint-parser": "9.3.1",
    "vue-svg-loader": "0.16.0"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html,yaml,yml,vue}": [
      "prettier --write"
    ],
    "*.{js,ts,yaml,yml,vue}": [
      "eslint --fix"
    ]
  }
}
